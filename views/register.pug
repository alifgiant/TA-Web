extends component/layout
block head_bar
    link(rel='stylesheet', href='/stylesheets/signin.css')
block content
    .col-xs-6.col-md-4.col-xs-offset-3.col-md-offset-4(style='padding-top: 20px;')
        .box.box-info
            .box-header.with-border
                h3.box-title= title
            // /.box-header
            // form start
            form.form-horizontal(method='POST')
                .box-body
                    .form-group
                        label.col-sm-2.control-label Full Name
                        .col-sm-10
                            input.form-control(name='full_name', type='text', required=true, placeholder='Full Name')
                    .form-group
                        label.col-sm-2.control-label Address
                        .col-sm-10
                            input.form-control(name='address', type='text', required=true, placeholder='Address')
                    .form-group
                        label.col-sm-2.control-label Username
                        if has_error
                            .col-sm-10.has-error
                                input.form-control(name='username', type='text', required=true, placeholder='username')
                            script.
                                alert('Username telah terpakai');
                        else
                            .col-sm-10
                                input.form-control(name='username', type='text', required=true, placeholder='username')
                    .form-group
                        label.col-sm-2.control-label Password
                        .col-sm-10
                            input.form-control(name='password', type='password', required=true, placeholder='Password')
                // /.box-body
                .box-footer
                    .col-xs-6.col-md-6.col-xs-offset-3.col-md-offset-3
                        button.btn.btn-sm.btn-primary.btn-block(type='submit') Register
                        a.btn.btn-sm.btn-block(href='/login') Already has an account?
