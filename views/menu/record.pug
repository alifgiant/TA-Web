mixin insert_table(index, alert)
    tr
        td= index+1 + '.'
        td= alert.type.toUpperCase()
        td= alert.time
        td= alert.full_name
        td= alert.device_id
        td= alert.phone_num        
        td= alert.occurance

// Content Header (Page header)
section.content-header
    h1
        | Warning Record
        small Show warning log
    ol.breadcrumb
        li
            i.fa.fa-dashboard  Warning        
// Main content
section.content
    // Your Page Content Here
    .box
        .box-header.with-border
            h3.box-title Logs
        // /.box-header
        .box-body
            table.table.table-bordered#patient-list-table
                tbody
                    tr
                        th(style='width: 10px') #
                        th(style='width: 50px') Type
                        th Time
                        th Name
                        th Device
                        th Phone                        
                        th(style='width: 50px') Count
                    each val, index in alerts
                        +insert_table(index, val)
        // /.box-body
        .box-footer.clearfix
            ul.pagination.pagination-sm.no-margin.pull-right
                li
                    a(href='#') «
                li
                    a(href='#') 1
                li
                    a(href='#') 2
                li
                    a(href='#') 3
                li
                    a(href='#') »

// /.content